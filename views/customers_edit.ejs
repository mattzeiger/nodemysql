        <input type="text" name = "inputPhone" id="inputPhone" class="form-control" placeholder="Phone" required autofocus>
		<label for="inputEmail" class="sr-only">Email</label>
        <input type="text" name = "inputEmail" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
      </form>
